doctype html
html
  head
    meta(charset='UTF-8')
    title FSE Chat Room
    link(rel='stylesheet prefetch', href='http://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900|RobotoDraft:400,100,300,500,700,900')
    link(rel='stylesheet prefetch', href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='stylesheets/style.css')
  body
    .main-title
      h1 FSE Chat Room
    .form-module
      .form
        #login_Page
          h2 Login to your account
          form#login_form
            input#username(type='text', placeholder='username',autocomplete="off")
            button#login_button(type='submit', value='GET', onclick='login();')  Login
        #MainChatPage
          #logoutButton
            button#logout(type='submit', value='POST', onclick='logout();')  Logout
            ul#messages
            textarea#post_bodytext(rows='5', cols='100')
          #button_post_msg
            button#post_button(type='submit', value='GET', onclick='postButtonPressed();')  POST
    script(src='/socket.io/socket.io.js')
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='javascripts/script.js')
